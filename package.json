{
  "name": "turborepo-basic-shared",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "nohoist": [
    "**/react-native",
    "**/react-native/**",
    "**/@react-native-*",
    "**/@react-native-*/**",
    "**/react-native-*",
    "**/react-native-*/**",
    "**/*react-navigation/native*",
    "**/*react-navigation/native*/**",
    "**/metro-*",
    "**/metro-*/**"
  ],
  "scripts": {
    "turbo": "turbo",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "npm@7.20.3"
}
