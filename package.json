{
  "name": "turborepo-basic-shared",
  "version": "0.1.5",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "nohoist": [
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/@react-native-*",
      "**/@react-native-*/**",
      "**/react-native-*",
      "**/react-native-*/**",
      "**/*react-navigation/native*",
      "**/*react-navigation/native*/**",
      "**/metro-*",
      "**/metro-*/**"
    ]
  },
  "scripts": {
    "turbo": "turbo",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "mobile:clean": "rm -rf node_modules && rm -rf apps/mobile/node_modules",
    "land:clean": "rm -rf node_modules && rm -rf apps/land/node_modules",
    "land:dev": "turbo run land#dev",
    "mobile:ios": "turbo run mobile#ios",
    "np": "np --no-publish",
    "postversion": "cd apps/mobile && yarn react-native-version"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
